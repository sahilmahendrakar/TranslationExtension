{
    "name": "Translation Extension",
    "version": "1.0",
    "description": "Toucan",
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["words.css"],
            "js": ["page_translator.js", "translate.js", "config/APIkey.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
      },
    "icons": {
    "16": "images/wave16.png",
    "32": "images/wave32.png",
    "48": "images/wave48.png",
    "128": "images/wave128.png"
    },
    "options_page" : "options.html",
    "manifest_version": 2
}