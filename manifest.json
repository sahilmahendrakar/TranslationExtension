{
    "name": "Translation Extension",
    "version": "1.0",
    "description": "Toucan",
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["words.css"],
            "js": ["page_translator.js", "translate.js", "config/APIkey.js"]
        }
    ],
    "options_page": "options.html",
    "manifest_version": 2
}